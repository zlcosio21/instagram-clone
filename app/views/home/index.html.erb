<!---sidebar--->
<div class="sidebar">
  <a href="#" class="logo">
    <img src="img/insta-logo.png" alt="" />
  </a>
  <div class="profile">
    <div class="profile-img">
      <img src="img/profile-2.jpeg" alt="" />
    </div>
    <div class="name">
      <h1>
        <%= current_user.username %>
      </h1>
      <img src="img/verify.png" alt="" />
    </div>
    <span>
      <%= current_user.email %>
    </span>
  </div>
  <div class="about">
    <div class="box">
      <h3>89</h3>
      <span>Posts</span>
    </div>
    <div class="box">
      <h3>123M</h3>
      <span>Followers</span>
    </div>
    <div class="box">
      <h3>14</h3>
      <span>Following</span>
    </div>
  </div>
  <div class="menu">
    <a href="#" class="active">
      <span class="icon">
        <i class="ri-function-line"></i>
      </span>
      Feed
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-search-line"></i>
      </span>
      Explore
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-notification-4-line"></i>
      </span>
      Notifications
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-mail-unread-fill"></i>
      </span>
      Messages
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-send-plane-fill"></i>
      </span>
      Direct
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-bar-chart-fill"></i>
      </span>
      Stats
    </a>
    <a href="#">
      <span class="icon">
        <i class="ri-settings-5-line"></i>
      </span>
      Settings
    </a>
    <a href="">
      <span class="icon">
        <i class="ri-logout-box-r-line"></i>
      </span>
      <%= button_to('Cerrar Sesion', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn-logout") %>
    </a>
  </div>
</div>
<!---main home--->
<div class="main-home">

  <div class="header">
    <div class="search">
      <i class="ri-search-line"></i>
      <input type="text" placeholder="search" />
    </div>
    <div class="header-content header-relatve">
      <i class="ri-notification-4-line"></i>
      <i class="ri-mail-unread-fill"></i>
      <%= link_to new_post_path, class: "btn" do %>
        <i class="ri-add-circle-fill"></i>
        <div class="btn-text">Crear post</div>
      <% end %>
    </div>
  </div>

  <main class="main-container">
    <%= render "posts/storie" %>
  </main>

  <div class="posts">
    <% @posts.each do |post| %>
      <%= render partial: "posts/post" , locals: { post: post } %>
    <% end %>
  </div>

  <section class="side-menu">
    <%= render "home/side_menu" %>
  </section>

</div>
