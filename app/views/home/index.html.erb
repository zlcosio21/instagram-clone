  </div>
  <div class="feed">
    <h1>Feed</h1>
    <div class="feed-text">
      <h2>Latest</h2>
      <span>Populer</span>
    </div>
  </div>
  <div class="main-posts">
    <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: post } %>
    <% end %>
  </div>
</div>
