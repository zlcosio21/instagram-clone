<!---main home--->
<div class="main-home">

  <div class="header">
    <div class="search">
      <i class="ri-search-line"></i>
      <input type="text" placeholder="search" />
    </div>
    <div class="header-content header-relatve">
      <i class="ri-notification-4-line"></i>
      <i class="ri-mail-unread-fill"></i>
      <%= link_to new_post_path, class: "btn" do %>
        <i class="ri-add-circle-fill"></i>
        <div class="btn-text">Crear post</div>
      <% end %>
    </div>
  </div>

  <div class="feed">
    <h1>Feed</h1>
    <div class="feed-text">
      <h2>Latest</h2>
      <span>Populer</span>
